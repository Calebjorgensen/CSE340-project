<!-- views/account/manage.ejs -->
<%- include('../partials/header.ejs') %>

<main id="account-management">
  <!-- Greet the user by first name -->
  <h2>Welcome, <%= accountData.firstName %></h2>

  <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
    <!-- Render Inventory Management section for employees/admins -->
    <h3>Inventory Management</h3>
    <p>
      <a href="/inv/">Access Inventory Management</a>
    </p>
  <% } %>

  <!-- Always display a link to update account information -->
  <p>
    <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
  </p>

  <!-- Additional account management content can go here -->
</main>

<%- include('../partials/footer.ejs') %>
