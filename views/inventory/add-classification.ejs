<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>

  <!-- Display flash messages if any -->
  <% if (messages) { %>
    <div class="flash-message">
      <%= messages %>
    </div>
  <% } %>

  <!-- Add Classification Form -->
  <form action="/inv/add-classification" method="POST">
    <label for="classification_name">Classification Name:</label>
    <input type="text" id="classification_name" name="classification_name" required>
    <button type="submit">Add Classification</button>
  </form>

  <!-- Optional: Client-side Validation (JavaScript) -->
  <script>
    document.querySelector('form').addEventListener('submit', function(event) {
      const classificationName = document.getElementById('classification_name').value;

      // Check if the classification name is valid (no spaces or special characters)
      const validationRegex = /^[a-zA-Z0-9]+$/;
      if (!validationRegex.test(classificationName)) {
        alert("Classification name must not contain spaces or special characters.");
        event.preventDefault();  // Prevent form submission
      }
    });
  </script>
</body>
</html>
