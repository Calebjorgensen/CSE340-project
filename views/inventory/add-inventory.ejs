<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>

  <!-- Display success message -->
  <% if (successMessage && successMessage.length > 0) { %>
    <div class="flash-message success">
      <p><%= successMessage %></p>
    </div>
  <% } %>

  <!-- Display error message -->
  <% if (errorMessage && errorMessage.length > 0) { %>
    <div class="flash-message error">
      <p><%= errorMessage %></p>
    </div>
  <% } %>

  <form action="/inv/add-inventory" method="POST">
    <!-- Make -->
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" required>
    
    <!-- Model -->
    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" required>

    <!-- Year -->
    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year" required>

    <!-- Description -->
    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description" required></textarea>

    <!-- Image Path -->
    <label for="inv_image">Image Path:</label>
    <input type="text" id="inv_image" name="inv_image" value="/images/no-image.jpg" required> <!-- Default image path -->

    <!-- Thumbnail Path -->
    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="/images/no-thumbnail.jpg" required> <!-- Default thumbnail path -->

    <!-- Price -->
    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" required>

    <!-- Miles -->
    <label for="inv_miles">Miles:</label>
    <input type="number" id="inv_miles" name="inv_miles" required>

    <!-- Color -->
    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" required>

    <!-- Classification -->
    <label for="classification_id">Classification:</label>
    <select name="classification_id" id="classification_id" required>
      <option value="">Select a classification</option>
      <% classifications.forEach(function(classification) { %>
        <option value="<%= classification.classification_id %>"><%= classification.classification_name %></option>
      <% }) %>
    </select>

    <button type="submit">Add Inventory</button>
  </form>

</body>
</html>
