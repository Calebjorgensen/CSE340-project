<!-- views/partials/header.ejs -->
<header id="top-header">
    <div class="siteName">
      <a href="/" title="Return to home page">CSE Motors</a>
    </div>
    <div id="tools">
      <% if (locals.loggedin) { %>
        <!-- When logged in, display welcome and Logout links -->
        <span>Welcome, <%= locals.accountData.firstName %></span>
        <!-- Account management link (if desired) -->
        <a href="/account/manage" title="Manage your account">My Account</a>
        <a href="/account/logout" title="Log out">Logout</a>
      <% } else { %>
        <!-- When not logged in, show My Account link to login -->
        <a href="/account/login" title="Click to log in">My Account</a>
      <% } %>
    </div>
  </header>
  