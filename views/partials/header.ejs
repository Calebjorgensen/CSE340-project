<!-- views/partials/header.ejs -->
<header id="top-header">
  <div class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </div>
  <div id="tools">
    <% if (locals.loggedin) { %>
      <!-- Display the greeting on its own line -->
      <div class="welcome-message">
        Welcome, <%= locals.accountData.account_firstname %>
      </div>
      <!-- Then display the logout link -->
      <div class="account-links">
        <a href="/account/logout" title="Log out">Logout</a>
      </div>
    <% } else { %>
      <div class="account-links">
        <a href="/account/login" title="Click to log in">My Account</a>
      </div>
    <% } %>
  </div>
</header>
